@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    @*<button id="show-all-connections">Show Connections</button>
    <ul id="user-list">
    </ul>*@

    @*<p>Users ConnectionIds</p>
    <ul>
        @foreach (var item in ViewBag.ConnectedUsersId)
            {

            }
    </ul>*@
    

    @if (Startup.EnableSignalR)
    {
        <div class="d-inline-flex">
            <h5 class="d-inline mr-2">Online <span class="online-count"></span></h5>
        </div>
    }
</div>

<div class="container">
    <div class="row">
        <div class="col-3">Your Connection Id</div>
        <div class="col-6"><span id="connectionId" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Receiver Id</div>
        <div class="col-4"><input type="text" id="receiverId" /></div>
    </div>

    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendToUser" value="Send Message" />&nbsp;&nbsp;
            <br />
            <br />
            <input type="button" id="sendButton" value="Send Message to All" />
            <br />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>